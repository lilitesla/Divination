<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lili.tesla.divinations.presentation.screen.prediction.view.PredictionActivity">

    <Button
        android:id="@+id/button_start_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/startGameAgain"/>

    <Button
        android:id="@+id/button_back_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goToMain"/>


</LinearLayout>
